{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "declaration": true,
    "declarationDir": "dist/types",
    "composite": true
  },
  "files": [],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../../node_modules/@vue/reactivity/dist/reactivity.d.ts"
  ]
}
